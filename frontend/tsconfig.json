{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@modules/*": ["src/modules/*"],
      "@directives/*": ["src/directives/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "module": "es2020",
    "lib": ["dom", "es2016"],
    "resolveJsonModule": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
